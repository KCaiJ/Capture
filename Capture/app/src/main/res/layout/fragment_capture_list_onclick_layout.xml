<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
        <LinearLayout
            android:background="#4ed8e7"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/fragmnet_capture_list_onclick_backBtn"
                android:src="@mipmap/back"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/fragmnet_capture_list_onclick_title"
                android:gravity="center"
                android:layout_marginRight="40dp"
                android:textSize="25sp"
                android:layout_weight="2"
                android:text="@string/DetailedInformation"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.6"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:background="@drawable/stoke"
                android:gravity="center"
                android:layout_weight="1.5"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/TextType"/>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="2"
                android:background="@drawable/stoke"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <Spinner
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:entries="@array/SwitchText"
                    android:id="@+id/fragmnet_capture_list_onclick_sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                </Spinner>
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/fragmnet_capture_list_onclick_listview"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </ListView>

    </LinearLayout>


