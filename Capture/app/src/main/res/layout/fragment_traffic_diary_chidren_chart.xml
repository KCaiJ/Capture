<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:textColor="#000"
        android:textSize="20sp"
        android:id="@+id/piechart_title"
        android:gravity="center"
        android:text=""
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/chartType"/>
        <LinearLayout
            android:layout_weight="1"
            android:background="@drawable/stoke"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <Spinner
                android:layout_weight="1"
                android:entries="@array/chartType"
                android:id="@+id/piechart_typeSp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>

         <LinearLayout
             android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/stoke"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <Spinner
                android:layout_weight="1"
                android:entries="@array/flowType"
                android:id="@+id/piechart_flowSp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_marginTop="20dp"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/traffic_diary_pie"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.github.mikephil.charting.charts.PieChart>
        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/traffic_diary_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.github.mikephil.charting.charts.HorizontalBarChart>
    </FrameLayout>

</LinearLayout>
